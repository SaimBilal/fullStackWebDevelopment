<%- include("header") -%>

    <div class="box">
        <h1 id="heading">
            <%= heading %>
        </h1>

        <% TodoList.forEach((item)=> { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= item %>
                </p>
            </div>
            <% }); %>

            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="Add new item here" autofocus>
                <button type="submit" name ="list" value= <%= heading %> ><i class="fa-solid fa-plus"></i></button>
            </form>
    </div>

    <script src="https://kit.fontawesome.com/d786a7a5dd.js" crossorigin="anonymous"></script>

<%- include("footer") -%>